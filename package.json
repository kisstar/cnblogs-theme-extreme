{
  "name": "@kisstar/cnblogs-theme-extreme",
  "version": "0.0.2",
  "private": false,
  "description": "Black and white, a brief and extreme cnblogs theme.",
  "scripts": {
    "lint:html": "htmlhint public/**/*.{htm,html}",
    "lint:style": "stylelint --allow-empty-input \"src/**/*.{css,scss,sass}\"",
    "lint:es": "eslint --no-error-on-unmatched-pattern --cache --ext .ts,.js .",
    "lint:md": "markdownlint **/*.md",
    "lint:prettier": "prettier --check \"**/*\" --end-of-line auto",
    "lint": "concurrently npm:lint:*",
    "commit": "git-cz",
    "prettier": "prettier -c --write \"**/*\"",
    "release": "standard-version"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "keywords": [
    "cnblogs",
    "cnblogs-theme-extreme"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:kisstar/cnblogs-theme-extreme.git"
  },
  "author": "kisstar <dwh.chn@foxmail.com>",
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "commitizen": "^4.2.1",
    "concurrently": "^5.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-typescript": "^10.0.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "htmlhint": "^0.14.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "markdownlint": "0.21.0",
    "markdownlint-cli": "^0.23.2",
    "prettier": "2.1.2",
    "sass": "^1.26.11",
    "standard-version": "9.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "typescript": "^4.0.3"
  },
  "license": "MIT",
  "dependencies": {}
}
